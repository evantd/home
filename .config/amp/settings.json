{
	"amp.commands.allowlist": [
		"git"
	],
	"amp.permissions": [
		{
			"tool": "Bash",
			"matches": {
				"cmd": "git commit *"
			},
			"action": "allow"
		},
		{
			"tool": "Bash",
			"matches": {
				"cmd": "./update-pdf.sh",
				"cwd": "/Users/edower/resume"
			},
			"action": "allow"
		},
		{
			"tool": "Bash",
			"matches": {
				"cmd": "git add *"
			},
			"action": "allow"
		}
	],
	"amp.mcpServers": {
		"playwright": {
			"url":       "http://localhost:64661/sse#playwright",
			"transport": "sse"
		},
		"serena": {
			"command": "bash",
			"args": [
				"-c",
				"uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project \"$(pwd)\""
			]
		},
		"serena-optimized": {
			"command": "bash",
			"args": [
				"-c",
				"/Users/edower/indeed/library/venv/bin/python3 /Users/edower/indeed/library/scripts/optimize-mcp.py --backend \"uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project $(pwd)\""
			]
		},
		"mcp-optimizer": {"url": "http://localhost:43366/mcp", "type": "http"}
	},
	"amp.dangerouslyAllowAll": true
}
